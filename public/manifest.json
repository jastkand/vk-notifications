{
    "manifest_version": 2,

    "name": "Оповещения VK",
    "description": "Оповещает о новых сообщениях на стене в выбранных группах.",
    "homepage_url": "https://github.com/jastkand/vk-notifications",
    "version": "1.0.3",

    "permissions": [ "contextMenus", "tabs", "storage" , "alarms", "http://*/*", "https://*/*" ],

    "icons": {
        "128": "assets/icon-128.png",
        "16": "assets/icon-16.png",
        "48": "assets/icon-48.png"
    },

    "background": {
        "scripts": [
          "js/background.js"
        ]
    },

    "options_page": "options.html",

    "browser_action": {
        "default_icon": "assets/icon-48.png",
        "default_popup": "popup.html"
    }
}
